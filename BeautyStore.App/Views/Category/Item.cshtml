@using BeautyStore.Models;
@model CategoryModel;

@{
    var parents = (IEnumerable<CategoryModel>)ViewBag.Parents;
}

<h3 class="text-center">Страница редактирования категории</h3>
@Html.HiddenFor(x => x.Id)

<div class="container-fluid h-100">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col col-sm-10 col-md-10 col-lg-8 col-xl-6">
            <form asp-action="Item" asp-controller="Category" method="post" autocomplete="off">
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control form-control-lg", placeholder = "Название", @type = "text" })
                </div>
                <div class="form-group">
                    @Html.DropDownListFor(x => x.Parent.Id,
            parents.Select(y => new SelectListItem
            {
                Value = y.Id.ToString(),
                Text = y.Title,
                Selected = Model.Parent != null && y.Id == Model.Parent.Id
            }),
                "Без категории",
                new { @class = "form-control form-control-lg" })
                </div>
                <div class="form-group">
                    <button class="btn btn-info btn-lg btn-block">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>


